<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_from_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/time_bac"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="2012-09-01 18:30:20"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <org.example.yulin.ui.view.RoundedCornerImageView
                android:id="@+id/chat_from_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_image" />

            <TextView
                android:id="@+id/chat_from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="小猪" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_chat_bubble_other"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/chat_from_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />

            <TextView
                android:id="@+id/chat_from_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actionbar_color"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>